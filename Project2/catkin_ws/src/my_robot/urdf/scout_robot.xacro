<?xml version='1.0'?>

<robot name="scout_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find my_robot)/urdf/scout_robot.gazebo" />
  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0.015" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <joint type="continuous" name="front_left_wheel_hinge">
    <origin xyz="0.02188 0.0365 0" rpy="0 0 0"/>
    <child link="front_left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="0.5" friction="1.0"/>
  </joint>

  <joint type="continuous" name="back_left_wheel_hinge">
    <origin xyz="-0.03188 0.0365 0" rpy="0 0 0"/>
    <child link="back_left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="0.5" friction="1.0"/>
  </joint>

  <joint type="continuous" name="front_right_wheel_hinge">
    <origin xyz="0.02188 -0.0365 0" rpy="0 0 0"/>
    <child link="front_right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="0.5" friction="1.0"/>
  </joint>

  <joint type="continuous" name="back_right_wheel_hinge">
    <origin xyz="-0.03188 -0.0365 0" rpy="0 0 0"/>
    <child link="back_right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="0.5" friction="1.0"/>
  </joint>

  <joint type="fixed" name="camera_joint">
    <origin xyz="0.055 0 0.015" rpy="0 0 0"/>
    <child link="camera"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.0 0 0.0425" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="2.26797"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0.015" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".096 .047 .045"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0.015" rpy=" 0 0 0"/>
      <geometry>
        <box size=".096 .047 .045"/>
      </geometry>
    </visual>

    <!-- <collision name='back_caster_collision'>
      <origin xyz="-0.035 0 -0.007" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.01399"/>
      </geometry>
    </collision>

    <visual name='back_caster_visual'>
      <origin xyz="-0.035 0 -0.007" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.014"/>
      </geometry>
    </visual>

    <collision name='front_caster_collision'>
      <origin xyz="0.045 0 -0.007" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.01399"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.045 0 -0.007" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.014"/>
      </geometry>
    </visual> -->

  </link>

  <link name="front_left_wheel">

    <visual name="front_left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <cylinder length="0.025" radius="0.02188" />
      </geometry>
    </visual>

    <collision name="front_left_wheel_collision">
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <cylinder length="0.025" radius="0.02188" />
      </geometry>
    </collision>

    <inertial>
     <mass value="0.75"/>
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    
  </link>
  
  <link name="back_left_wheel">

    <visual name="back_left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <cylinder length="0.025" radius="0.02188" />
      </geometry>
    </visual>

    <collision name="back_left_wheel_collision">
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <cylinder length="0.025" radius="0.02188" />
      </geometry>
    </collision>

    <inertial>
     <mass value="0.75"/>
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    
  </link>

  <link name="front_right_wheel">

    <visual name="front_right_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <cylinder length="0.025" radius="0.02188" />
      </geometry>
    </visual>

    <collision name="front_right_wheel_collision">
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <cylinder length="0.025" radius="0.02188" />
      </geometry>
    </collision>

    <inertial>
     <mass value="0.75"/>
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    
  </link>

  <link name="back_right_wheel">

    <visual name="back_right_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <cylinder length="0.025" radius="0.02188" />
      </geometry>
    </visual>

    <collision name="back_right_wheel_collision">
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <cylinder length="0.025" radius="0.02188" />
      </geometry>
    </collision>

    <inertial>
     <mass value="0.75"/>
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    
  </link>

  <link name="camera">

    <visual name="camera_visual">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.014 0.047 0.045"/>
      </geometry>
    </visual>

    <collision name="camera_collision">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.014 0.047 0.045"/>
      </geometry>
    </collision>

    <inertial>
     <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

  </link>

  <link name="hokuyo">

    <visual name="hokuyo_visual">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://my_robot/meshes/hokuyo.dae" scale="1.00 0.9 0.12" />
      </geometry>
    </visual>

    <collision name="hokuyo_collision">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
         <box size="0.07 0.03 0.012"/>
      </geometry>
    </collision>

    <inertial>
     <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>
  </link>

  <!-- Coloring-->
  <gazebo reference="chassis">
      <material>Gazebo/DarkGrey</material>
  </gazebo>
  <gazebo reference="front_left_wheel">
      <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="back_left_wheel">
      <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="front_right_wheel">
      <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="back_right_wheel">
      <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="camera">
      <material>Gazebo/FlatBlack</material>
  </gazebo>
</robot>
